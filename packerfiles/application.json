{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "ENVIRONMENT": ""
  },

  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./playbooks/application.yml",
      "ansible_env_vars": [ "ANSIBLE_NOCOWS=1" ],
      "extra_arguments": [ "--extra-vars", "app_environment={{user `ENVIRONMENT`}} override_hosts=all" ]
    }
  ],
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "eu-central-1",
      "associate_public_ip_address": true,
      "source_ami_filter": {
        "filters": {
           "virtualization-type": "hvm",
           "name": "CentOS Linux 7 x86_64 HVM EBS ENA*",
           "root-device-type": "ebs"
         },
         "owners": [
             "679593333241"
         ],
         "most_recent": true
      },
      "ami_regions": [
          "eu-west-1"
      ],
      "ami_users": [
           "200562504897",
           "980331777790",
      ],
      "instance_type": "t3.small",
      "ssh_username": "centos",
      "ami_name": "Example Application {{timestamp}}",
      "ami_description": "Packer baked AMI for example application",
      "ami_virtualization_type": "hvm",
      "tags": {
        "OS_Version": "CentOS 7",
        "BasedOn": "CentOS 7",
        "owner": "Company name",
        "environment": "all",
        "role": "Frontend AMI",
        "packer": "True"
      }
    }
  ]
}
